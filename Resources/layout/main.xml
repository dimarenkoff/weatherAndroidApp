<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">
    <Button
        android:text="Moje místa"
        android:textColor="@color/text"
        android:background="@color/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnChangeCity"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center"
            android:src="@drawable/sunny"
            android:layout_width="350px"
            android:layout_height="350px"
            android:id="@+id/imgCR"/>
        <TextView
            android:text="Praha"
            android:textColor="@color/text"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbCity"/>
            <TextView
                android:text="(Hlavní město Praha,Czech Republic)"
                android:textColor="@color/text"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbRegionCountry"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="26dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Teplota:"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/lbTemperature"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="17 °C"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbTempValue"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/linearLayout1">
            
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Srážky:"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/lbPrecip"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="0%"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbPrecipValue"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Vlhkost:"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/lbMoisture"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="61%"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbMoistureValue"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Vítr:"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/lbWind"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="7 km/h"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbWindValue"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:text=""
            android:background="@android:color/darker_gray"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textAutoComplete"
            android:minWidth="200dp"
            android:id="@+id/tbText"
            android:autoText="true"
             />

        <Button
            android:text="Vyhledat"
            android:textColor="@color/text"
            android:background="@color/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnFind"/>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/location"
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:id="@+id/imgLocation"/>
    <TextView
        android:text="Vaše poloha:"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/lbYourLocation"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Split"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/lbLocation"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:text="21 C°"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbLocationTemperature"/>
    </LinearLayout>
</LinearLayout>
